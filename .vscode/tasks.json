{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build bubwarp",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "${workspaceFolder}/src/bubwarp.cpp",
        "-o",
        "${workspaceFolder}/bin/x64/bubwarpApp",
        "-I${workspaceFolder}/include",
        "-L${workspaceFolder}/lib",
        "-ltobii_gameintegration_x64",
        "-lstdc++",
        "-lgdi32",
        "-lgdiplus",
        "-mconsole"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compiler task for bubwarp.cpp"
    },
